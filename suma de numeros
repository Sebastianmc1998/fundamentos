
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void pregunta1();
void pregunta2();
void pregunta3();
void pregunta4();

int main()
{int n;
cout<<".......MENU......"<<endl;
cout<<"1) Pregunta 1"<<endl;
cout<<"2) Pregunta 2"<<endl;
cout<<"3) Pregunta 3"<<endl;
cout<<"4) Pregunta 4"<<endl;
cout<<"0) Salir"<<endl;

do
{
switch (n)
{
case 1: pregunta1();
        break;
        
case 2: pregunta2();
        break;
case 3: pregunta3();
        break;
case 4: pregunta4();
        break;
case 0: break;
default: cout<<"valor invalido"<<endl;
}
}
while(n!=0);
getch();
return 0;
}
